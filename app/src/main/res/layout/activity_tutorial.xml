<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002b36"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THIRD EYE"
        android:textColor="#00BCD4"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1) What is third eye application?\nThis app is the way to use your camera smartly.\n\n2) How it works?\nStart third eye app.\n\nPress recording button to start video recording.\n\nYou can minimize your application once recording get started.\n\nYour recording will continue until you come back to the app and stop it.\n\nYou can find recorded videos in gallery tab."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:lineSpacingExtra="6dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnGotIt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO IT"
        android:backgroundTint="#000000"
        android:layout_marginBottom="20dp"/>
</LinearLayout>